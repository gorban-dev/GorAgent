{
  "name": "goragent",
  "version": "1.0.0",
  "description": "Одностраничный веб-чат с ИИ агентом на базе OpenAI API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "stop": "lsof -t -i :${PORT:-3000} | xargs -r kill -9 2>/dev/null || true",
    "restart": "npm run stop && npm start",
    "mcp:formatter": "node mcp-server-formatter.js",
    "mcp:filesaver": "node mcp-server-filesaver.js",
    "mcp:test": "node mcp-multi-agent.js",
    "test:indexer": "node test-document-indexer.js",
    "test:rag": "node test-rag.js",
    "chat": "node rag-chat-cli.js",
    "index:project": "node index-project-docs.js",
    "dev-assistant": "npm run index:project && npm start"
  },
  "keywords": [
    "openai",
    "chatbot",
    "ai-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  }
}

